# Cache static assets for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS files for 1 year
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache JavaScript files for 1 year
/scripts/**/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache i18n files for 1 year
/scripts/i18n/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache utils files for 1 year
/scripts/utils/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache core files for 1 year
/scripts/core/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache email handlers for 1 year
/scripts/email-notifications/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache element files for 1 year
/scripts/elements/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages for 1 hour (to allow updates)
/*.html
  Cache-Control: public, max-age=3600

# Cache element HTML files for 1 hour
/elements/*.html
  Cache-Control: public, max-age=3600

# Cache pages HTML files for 1 hour
/pages/*.html
  Cache-Control: public, max-age=3600
